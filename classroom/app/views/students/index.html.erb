<div class="overlay-container">
  <%= link_to 'New Student', new_student_path, class: 'btn btn-primary form-control' %>
  <div class="limiter">
		<div class="container-table100">
			<div class="wrap-table100">
				<div class="table100 ver1 m-b-110">
					<div class="table100-head">
						<table>
							<thead>
								<tr class="row100 head">
                  <th>Name</th>
                  <th>Age</th>
                  <th>Roll number</th>
                  <th>User</th>
                  <th colspan="3"></th>
								</tr>
							</thead>
						</table>
					</div>
          <div class="table100-body js-pscroll">
						<table>
							<tbody>
                <% @students.each do |student| %>
								<tr class="row100 body">
                  <td><%= student.name %></td>
                  <td><%= student.age %></td>
                  <td><%= student.roll_number %></td>
                  <td><%= student.user %></td>
                  <td><%= link_to 'Show', student %></td>
                  <td><%= link_to 'Edit', edit_student_path(student) %></td>
                  <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
								</tr>
                <% end %>
							</tbody>
						</table>
					</div>
				</div>
      </div>
    </div>
  </div>
</div>  


<div class="masthead">
  <div class="masthead-bg"></div>
  <div class="container h-100">
    <div class="row h-100">
      <div class="col-12 my-auto">
        <div class="masthead-content text-white py-5 py-md-0">
          <h1 class="mb-3">Module 8 Classroom App</h1>
          <p id="notice"><%= notice %></p>
          <p class="mb-5">Hello Teacher: <%= "#{current_user.name}"%> </p>
          <div class="input-group input-group-newsletter">  
            <p></p>
            <div class="input-group form-group">
              <%= link_to 'Sign-Out', destroy_user_session_path(protocol: 'https'), method: :delete, class: 'btn btn-danger form-control'%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>